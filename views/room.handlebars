<head>
  <title>Tieso Inn</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.1/css/all.css" />

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/styles/home.css" />
</head>

<body>
  <!-- Nav Bar -->
  <nav class="navbar navbar-expand-sm navbar-dark bg-orange">
    <a class="navbar-brand" href="/"><i class="fa" aria-hidden="true"></i> Tieso Inn</a>
    <button class="navbar-toggler d-lg-none" type="button" data-toggle="collapse" data-target="#collapsibleNavId" aria-controls="collapsibleNavId" aria-expanded="false" aria-label="Toggle navigation">
      <i class="fa fa-caret-down" aria-hidden="true"></i>
    </button>
    <div class="collapse navbar-collapse" id="collapsibleNavId">
      <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
        <li class="nav-item"><a class="nav-link" href="/">Inicio</a></li>
        <li class="nav-item active"><a class="nav-link" href="#">Reservar<span class="sr-only">(current)</span></a></li>
      </ul>
      <ul class="navbar-nav">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="dropdownId" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Ingreso</a>
          <div class="dropdown-menu" aria-labelledby="dropdownId" id="dropdownMenu">
            <a class="dropdown-item" id="option-1" href="/login">Ingresar</a>
            <a class="dropdown-item" id="option-2" href="/register">Registro</a>
          </div>
        </li>
        <li class="nav-item"><a class="nav-link" id="supportChatLink" href="#" hidden>Ayuda</a></li>
      </ul>
    </div>
  </nav>

  <div class="reservation-container" id="reservation-form">
    <h1>Reservar habitación</h1>
    <img src="{{this.image_url}}" class="card-img-top w-50 h-auto" alt="{{this.image_url}}" />
    <p class="card-text">{{this.description}}</p>
    <hr>
    <form action="/reservations" method="POST">
      <div class="form-group">
        <label for="arrival_date">Fecha de llegada:</label>
        <input 
          type="date" 
          class="form-control" 
          id="arrival_date" 
          name="arrival_date" 
          required 
          style="width: 20%" 
        />
      </div>
      <div class="form-group">
        <label for="checkout_date">Fecha de salida:</label>
        <input 
          type="date" 
          class="form-control" 
          id="checkout_date" 
          name="checkout_date" 
          required 
          style="width: 20%" 
        />
      </div>
      <div class="form-group">
        <label for="num_of_guest">Número de huéspedes:</label>
        <input 
          type="number" 
          class="form-control" 
          id="num_of_guest" 
          name="num_of_guest" 
          min="1" 
          max="10" 
          required 
          style="width: 10%" 
        />
      </div>
      <hr>
      <p class="card-text">Costo por noche ${{this.price_per_night}}</p>
      <button type="submit" class="btn btn-success" id="confirm-reservation">Confirmar reserva</button>
    </form>
  </div>

  <script src="/scripts/reservation.js"></script>
  <script src="/scripts/token.js"></script>
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
